#include "pch.h"
#include "Windows.h"

using namespace System;

int main(array<System::String ^> ^args)
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);

    Console::WriteLine("Введіть рядок: ");
    String^ text(Console::ReadLine());

    String^ textword(L"begin " + text + L" end");

    int len(textword->Length);

    Console::WriteLine("Рядок: {0}", textword);
    Console::WriteLine("Його довжина: {0}", len);
    return 0;
}

#include "pch.h"
#include "Windows.h"

using namespace System;

int main(array<System::String^>^ args)
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);

    Console::WriteLine("Введіть рядок1: ");
    String^ text1 (Console::ReadLine());

    Console::WriteLine("Введіть рядок2: ");
    String^ text2(Console::ReadLine());

    String^ text3(text1 + " " + text2);

    Console::WriteLine(L"Рядок перший: {0}", text1);
    Console::WriteLine(L"Рядок другий: {0}", text2);
    Console::WriteLine(L"Рядок об'еднаний: {0}", text3);
    return 0;
}

#include "pch.h"
#include "Windows.h"

using namespace System;

int main(array<System::String^>^ args)
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);

    Console::WriteLine("Введіть рядок1: ");
    String^ text1(Console::ReadLine());

    Console::WriteLine("Введіть рядок2: ");
    String^ text2(Console::ReadLine());

    int result(String::Compare(text1, text2));

    if (result < 0)
        Console::WriteLine(L"{0} менше ніж {1}.", text1, text2);
    else if (result > 0)
        Console::WriteLine(L"{0} більше ніж {1}.", text1, text2);
    else
        Console::WriteLine(L"{0} еквівалентно {1}.", text1, text2);

    return 0;
}

#include "pch.h"
#include "Windows.h"

using namespace System;

int main(array<System::String^>^ args)
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);

    Console::WriteLine(L"Введіть рядок:");
    String^ text = Console::ReadLine();
    
    String^ revers("");

    for (int i(text->Length - 1); i >= 0; i--)
    {
        revers += text[i];
    }

    Console::WriteLine("Рядок оригінал: {0}", text);
    Console::WriteLine("Рядок навпаки: {0}", revers);
    return 0;
}

#include "pch.h"
#include "Windows.h"

using namespace System;

int main(array<System::String^>^ args)
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);

    Console::WriteLine("Введіть рядок1: ");
    String^ text1(Console::ReadLine());

    Console::WriteLine("Введіть рядок2: ");
    String^ text2(Console::ReadLine());

    int len1(text1->Length);
    int len2(text2->Length);

    int result(len1 - len2);

    if (result < 0)
        Console::WriteLine(L"Другий рядок довше ніж перший рядок.");
    else if (result > 0)
        Console::WriteLine(L"Перший рядок довше ніж другий рядок.");
    else
        Console::WriteLine(L"Рядки однакові по довжині.");

    return 0;
}

------------LAB 5-----------

#include "pch.h"
using namespace System;

int main(array<String^>^ args)
{
    Console::OutputEncoding = System::Text::Encoding::UTF8;

    const double T = 1800.0; 
    array<double>^ stresses = { 100, 120, 150, 170, 200, 250 }; 
    int n = stresses->Length;

    array<double>^ diameters = gcnew array<double>(n);

    Console::WriteLine(L"Таблиця результатів:");
    Console::WriteLine(L"------------------------------------------");
    Console::WriteLine(L"|   t (кгс/см²)  |  d (см)               |");
    Console::WriteLine(L"------------------------------------------");

    for (int i = 0; i < n; i++)
    {

        double d = Math::Pow((16 * T) / (Math::PI * stresses[i]), 1.0 / 3.0);
        diameters[i] = d;

        Console::WriteLine(L"|  {0,8:F0}      |  {1,10:F3} см         |", stresses[i], d);
    }

    Console::WriteLine(L"------------------------------------------");
    Console::ReadKey();
    return 0;
}

#include "pch.h"
using namespace System;

int main(array<String^>^ args)
{
    Console::OutputEncoding = System::Text::Encoding::UTF8;

    int rows, cols;

    Console::Write(L"Введіть кількість рядків: ");
    rows = Int32::Parse(Console::ReadLine());

    Console::Write(L"Введіть кількість стовпців: ");
    cols = Int32::Parse(Console::ReadLine());

    Random^ rnd = gcnew Random();

    array<array<int>^>^ matrix = gcnew array<array<int>^>(rows);
    for (int i = 0; i < rows; i++)
        matrix[i] = gcnew array<int>(cols);

    for (int i = 0; i < rows; i++)
        for (int j = 0; j < cols; j++)
            matrix[i][j] = rnd->Next(0, 100);

    Console::WriteLine(L"\nПочаткова матриця:");
    for (int i = 0; i < rows; i++)
    {
        for (int j = 0; j < cols; j++)
            Console::Write("{0,4}", matrix[i][j]);
        Console::WriteLine();
    }

    int minValue = matrix[0][0];
    int minRow = 0, minCol = 0;

    for (int i = 0; i < rows; i++)
    {
        for (int j = 0; j < cols; j++)
        {
            if (matrix[i][j] < minValue)
            {
                minValue = matrix[i][j];
                minRow = i;
                minCol = j;
            }
        }
    }

    Console::WriteLine(L"\nМінімальний елемент: {0} (рядок {1}, стовпець {2})",
        minValue, minRow, minCol);

    for (int j = 0; j < cols; j++)
        matrix[minRow][j] = 0; 

    for (int i = 0; i < rows; i++)
        matrix[i][minCol] = 0; 

    Console::WriteLine(L"\nМатриця після перетворення:");
    for (int i = 0; i < rows; i++)
    {
        for (int j = 0; j < cols; j++)
            Console::Write("{0,4}", matrix[i][j]);
        Console::WriteLine();
    }

    Console::ReadKey();
    return 0;
}
